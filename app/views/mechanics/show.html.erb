<h1> Mechanic Show Page </h1>
 
 <div id="mechanic">
  <p> Name: <%= @mechanic.name %> </p>
  <p> Years of Experience: <%= @mechanic.experience %> </p>
</div>

<div id="mechanic-rides">
  <% @mechanic.rides.each do |ride| %>
    <%= ride.name %>
  <% end%>
</div>

<div id="add_ride">
<%= form_with url:"/mechanics/#{@mechanic.id}/rides", method: :post, local: true do |form| %>
<p>Add Ride Workorder:</p>
  <%= form.number_field :ride_id %>
  <%= form.label :ride_id, "Ride ID" %>
  <%= form.submit "Submit" %>
<% end %>
</div>